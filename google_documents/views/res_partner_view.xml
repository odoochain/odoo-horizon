<odoo>

    <!-- Add program for student form view -->
    <record id="view_res_partner_form_google_docs" model="ir.ui.view">
        <field name="name">view.res.partner.form.google.docs</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook[last()]" position="inside">
                <page name="google_document_list" string="Google Documents"
                      attrs="{'invisible': [('google_drive_folder_id','=',False)]}">
                    <button class="btn btn-primary float-end" name="action_refresh_google_drive_files" icon="fa-refresh"
                            string="Refresh" type="object"/>
                    <field name="google_drive_files" mode="tree">
                        <tree string="Google Documents" create="0" delete="0">
                            <field name="name"/>
                            <field name="mimeType"/>
                            <field name="url" widget="url" string="Google Drive" text="Open"/>
                        </tree>
                    </field>
                    <group>
                        <field name="google_drive_folder_id"/>
                        <button type="object" name="action_open_google_drive" class="oe_highlight btn btn-primary">Open
                            Drive
                        </button>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_res_company_form_google_docs" model="ir.ui.view">
        <field name="name">view.res.company.form.google.docs</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website']" position="after">
                <field name="google_drive_id"/>
            </xpath>
        </field>
    </record>

    <!-- Individual Program Form View -->
    <record model="ir.ui.view" id="google_drive_service">
        <field name="name">google.drive.service.view</field>
        <field name="model">google.drive.service</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Google Drive Service">
                <sheet>
                    <group col="4" modifiers="{}">
                        <field name="name" modifiers="{}" id="name"/>
                        <newline modifiers="{}"/>
                        <field name="drive_auth_code" colspan="4" modifiers="{}" id="drive_auth_code"/>
                        <field name="drive_client_config_json" colspan="4" modifiers="{}"
                               id="drive_client_config_json"/>
                        <field name="drive_credentials_json" colspan="4" modifiers="{}" id="drive_credentials_json"/>
                    </group>
                    <button class="btn btn-primary float-end" name="action_connect_to_drive" icon="fa-plug"
                            string="Connect" type="object"/>
                    <button class="btn btn-primary float-end" name="action_refresh_token" icon="fa-refresh"
                            string="Refresh" type="object"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>