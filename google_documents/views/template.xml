<odoo>
    <template id="file_404" name="File not found">
        <t t-call="website.layout"> <!-- Affiche le layout du site web -->
            <div class="o_not_editable bg-100 pt40">
                <div class="container">
                    <div class="text-center my-5">
                        <h1>File not found</h1>
                        <p>Sorry, the file you are trying to access cannot be found.</p>
                        <a
                            class="btn btn-primary btn_cta my-5"
                            href="/"
                        >Back to home page</a>
                    </div>
                </div>
                <hr/>
            </div>
        </t>
    </template>
</odoo>
