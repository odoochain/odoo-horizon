    <record id="view_approuve_blocs_filter" model="ir.ui.view">
      <field name="name">approuve_blocs.select</field>
      <field name="model">school.individual_bloc</field>
      <field name="arch" type="xml">
        <search string="Search Blocs">
          <field name="name" filter_domain="[('name', 'ilike',self)]" />
          <searchpanel>
            <field name="state" icon="fa-users" enable_counters="1" />
            <field name="source_bloc_speciality_id" icon="fa-briefcase" enable_counters="1" />
          </searchpanel>
        </search>
      </field>
    </record>
    
    <record id="view_approuve_valuations_filter" model="ir.ui.view">
      <field name="name">approuve.select.valuations</field>
      <field name="model">school.valuation_followup</field>
      <field name="arch" type="xml">
        <search string="Search Programs">
          <field name="name" filter_domain="[('name', 'ilike',self)]" />
          <searchpanel>
            <field name="state" icon="fa-bars" enable_counters="1" />
            <field name="student_id" icon="fa-users" enable_counters="1" />
          </searchpanel>
        </search>
      </field>
    </record>
    
    <!-- Approuval Programs Kanban View  -->
    <record model="ir.ui.view" id="approuve_valuations_kanban_view">
      <field name="name">school.approuve.valuations.kanban</field>
      <field name="model">school.valuation_followup</field>
      <field name="arch" type="xml">
        <kanban class="o_approuve_valuations_kanban">
          <field name="name"/>
          <field name="student_id"/>
          <field name="responsible_id"/>
          <field name="state"/>
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="approuve_valuations_{{record.state.raw_value}} oe_kanban_global_click o_kanban_record_has_image_fill o_approuve_valuations_kanban o_kanban_record" style="width:500px;">
                  <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image: url(#{kanban_image('res.partner', 'image_128', record.student_id.raw_value)})" role="img"/>
                  <div class="oe_kanban_details ml8">
                      <div class="o_kanban_record_top">
                          <div class="o_kanban_record_headings">
                              <strong class="o_kanban_record_title">
                                  <div>
                                      <strong><span t-esc="record.name.value"/></strong>
                                  </div>
                              </strong>
                              <span t-esc="record.student_id.value"/> - <span t-esc="record.responsible_id.value"/>
                              <span class="o_kanban_record_subtitle"><span t-esc="record.state.value"/></span>
                          </div>
                      </div>
                  </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
    
