    <!-- Program approuval Kanban View -->
    <record model="ir.ui.view" id="program_approuval_kanban_view">
      <field name="name">school.program_approuval.kanban</field>
      <field name="model">school.program_approuval</field>
      <field name="arch" type="xml">
        <kanban class="o_program_approuval_kanban">
          <field name="valuation_followup_count"/>
          <field name="individual_bloc_count"/>
          <field name="name"/>
          <field name="year_id"/>
          <field name="secretary_id"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click o_program_approuval_kanban">
                <div class="o_kanban_card_header">
                  <div class="o_kanban_card_header_title">
                    <div class="o_primary">
                      <field name="name"/><br/>
                      <field name="year_id"/><br/>
                      <field name="secretary_id"/>
                    </div>
                  </div>
                  <div class="container o_kanban_card_content o_visible">
                    <div class="row">
                      <div class="col-12 col-md-6 o_kanban_primary_left">
                        <b>Programs : </b>
                        <field name="valuation_followup_count" />
                      </div>
                      <div class="col-12 col-md-6">
                        <b>Blocs : </b>
                        <field name="individual_bloc_count" />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>
  
    <!-- Program_approuval Form View -->
    <record model="ir.ui.view" id="program_approuval_form">
      <field name="name">school.program_approuval.view</field>
      <field name="model">school.program_approuval</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Program_approuval">
          <header>
            <button name="to_draft" type="object" states="active,archived" string="Set to Draft" />
            <button name="activate" type="object" states="draft" string="Activate Approuval" class="oe_highlight" />
            <button name="archive" type="object" states="draft,active" string="Archive Approuval" />
            <button name="action_open_approuve_valuations" type="object" states="active" string="Approuve Valuations" />
            <button name="action_open_approuve_bloc" type="object" states="active" string="Approuve Blocs" />
            <field name="state" widget="statusbar" statusbar_visible="draft,active,archived" />
          </header>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button class="oe_stat_button" icon="fa-star">
                  Valorisations <field nolabel="1" name="valuation_followup_count" widget="statinfo"/>
              </button>
              <button class="oe_stat_button" icon="fa-comments" string="Individual Bloc Count">
                  <field string="Bloc Count " name="individual_bloc_count" widget="statinfo"/>
              </button>
            </div>

            <div class="oe_title">
              <h1>
                <field name="name" />
              </h1>
            </div>
            <group col="4">
              <field name="year_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
              <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
              <field name="secretary_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
<!--              <field name="valuation_followup_count" />-->
<!--              <field name="individual_bloc_count" />-->
            </group>
            <group col="2">
              <field name="individual_bloc_ids" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
              <field name="valuation_followup_ids" readonly="1" force_save="1"/>
              <field name="participant_ids" widget="many2many_tags"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    
