                    name="second_result"
                    string="Sec"
                    class="horizon_eval_cell"
                    attrs="{'readonly': [('open_second_result','=',False)]}"
                /> <!-- readonly="1" /> -->
                    <field name="second_session_result" string="S2" invisible="1" />
                    <field name="first_session_result_bool" invisible="1" />
                    <field name="second_session_result_bool" invisible="1" />
                    <field name="is_annual" invisible="1" />
                    <field name="is_danger" invisible="1" />
                    <field name="open_partial_result" invisible="1" />
                    <field name="open_final_result" invisible="1" />
                    <field name="open_second_result" invisible="1" />
                </xpath>
            </field>
