<odoo>


        <record id="school_individual_course_form_inherited" model="ir.ui.view">
            <field name="name">school.individual_course.form.inherited</field>
            <field name="model">school.individual_course</field>
            <field
            name="inherit_id"
            ref="school_management.view_school_individual_course_form"
        />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Results" name="results">
                    <group>
                      <group>
                        <field name="partial_result" />
                        <field name="second_result" />
                        <field name="final_result" />
                      </group>
                    </group>
                </page>
                <page string="Archive" name="archive">
                    <group>
                      <group>
                        <field name="jun_result" />
                        <field name="sept_result" />
                      </group>
                    </group>
                    <group>
                      <group string="First Session">
                        <field name="first_session_result" />
                        <field name="first_session_note" />
                      </group>
                      <group string="Second Session">
                        <field name="second_session_result" />
                        <field name="second_session_note" />
                      </group>
                    </group>
                </page>
                </xpath>
            </field>
        </record>


