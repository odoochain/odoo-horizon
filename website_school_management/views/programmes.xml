    <!-- //////////////////////////////////////////////////////////////// -->
    <!-- //                         BREADCRUMB                         // -->
    <!-- //////////////////////////////////////////////////////////////// -->

    <template id="programmes_breadcrumb">
        <t t-if="len(breadcrumb) != 1">
            <div class="breadcrumb mb-4">
                <t t-set="count" t-value="1" />
                <t t-foreach="breadcrumb" t-as="breadcrumb_item">
                    <t t-if="count == len(breadcrumb)">
                        <span class="breadcrumb-elem -active"><t
                                t-esc="breadcrumb_item['name']"
                            /></span>
                    </t>
                    <t t-else="1">
                        <a
                            t-att-title="'Retourner à ' + breadcrumb_item['name']"
                            class="breadcrumb-elem"
                            t-att-href="breadcrumb_item['uri']"
                        ><t t-esc="breadcrumb_item['name']" /></a>
                        <t t-set="count" t-value="count + 1" />
                    </t>
                </t>
            </div>
        </t>
    </template>

    <!-- //////////////////////////////////////////////////////////////// -->
    <!-- //                             LIST                           // -->
    <!-- //////////////////////////////////////////////////////////////// -->

    <template id="open_list">
