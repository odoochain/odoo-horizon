                                    <field name="total_registered_credits"/>-->
                                    <templates>
                                      <t t-name="kanban-box">
                                          <div
                                            style="position: relative; border-top : 10px solid #ffc107;"
                                        >
                                              <div class="oe_module_vignette container">
                                                <div class="row">
                                                  <div class="col-12">
                                                    <field name="uid" />
                                                  </div>
                                                </div>
                                                <div class="row">
                                                  <div class="col-12">
                                                    <field name="source_program_id" />
                                                  </div>
                                                </div>
                                                <div class="row">
                                                  <!-- <div class="col-6"> TODO add in evaluation
