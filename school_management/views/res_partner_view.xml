            <field name="name">view.res.partner.form.school</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field eval="99" name="priority" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button
                    name="toggle_active"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-archive"
                >
                        Archiver
                    </button>
                </xpath>
                <xpath expr="//field[contains(@name, 'image_1920')]" position="replace">
                    <field
                    name="image_1920"
                    widget="image"
                    class="oe_left oe_inline"
                    style="max-width:128px;max_height:128px;margin: 15px;"
                    options="{&quot;preview_image&quot;: &quot;image_128&quot;}"
                />
                </xpath>
                <xpath
                expr="//div[contains(@class, 'oe_title')]/following-sibling::group"
                position="replace"
            >
                </xpath>
                <xpath expr="//div[contains(@class, 'oe_title')]" position="replace">
                    <div class="oe_title">
                        <h1>
                            <field
                            name="name"
                            default_focus="1"
                            placeholder="Nom"
                            class="oe_inline"
                        />
                            <field
                            name='initials'
                            placeholder="I.,J.,F."
                            class="oe_inline"
                        />
                        </h1>
                        <span class="oe_fade">
                              Id : <field
                            name="id"
                            options="{&quot;no_open&quot;:True}"
                            class="oe_inline"
                        />
                        </span>
                        <group>
                            <group>
                                <field
                                name="category_id"
                                widget="many2many_tags"
                                placeholder="Tags..."
                            />
                                <field name="user_ids" invisible="1" />
                                <field
                                name="email"
                                widget="email"
                                placeholder="Email"
                            />
            				    <field name='student' />
                                <field name='teacher' />
                            </group>
                            <group>
                                <field name='employee' />
                                <field name='lastname' />
            					<field name='firstname' />
                                <field
                                name="function"
                                placeholder="e.g. Sales Director"
                            />
                                <field name="active" invisible="1" />
            				</group>
                        </group>
                    </div>
                </xpath>
                <xpath expr="//notebook" position="replace">
                    <notebook>
                        <page
                        name="cycles_page"
                        string="Cycles"
                        attrs="{'invisible': [('student','=',False)]}"
                    >
