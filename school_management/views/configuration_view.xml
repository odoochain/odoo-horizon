                                <field name="name"/>
                                <field name="domain_id"/>
                                <field name="track_id"/>
                                <field name="section_id"/>
                            </group>
                        </group>

                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_speciality_list" model="ir.ui.view">
            <field name="name">school.speciality.tree</field>
