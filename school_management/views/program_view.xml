<odoo>

    <!--

        Course Group

        -->

    <!-- Course Group Kanban View -->
    <record model="ir.ui.view" id="course_group_kanban_view">
        <field name="name">shcool.course_group.kanban</field>
        <field name="model">school.course_group</field>
        <field name="arch" type="xml">
            <kanban class="o_course_group_kanban">
                <field name="name" />
                <field name="uid" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_course_group_kanban">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="uid" />
                                        <br />
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </div>
                                </div>
                                <div class="container o_kanban_card_content o_visible">
                                    <div class="row">
                                        <div class="col-6 o_kanban_primary_left">
                                            <b>Credits :</b>
                                            <field name="total_credits" />
                                        </div>
                                        <div class="col-6">
                                            <b>Hours :</b>
                                            <field name="total_hours" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Course Group Tree View -->
    <record id="view_course_group_tree" model="ir.ui.view">
        <field name="name">school.course_group.tree</field>
        <field name="model">school.course_group</field>
        <field eval="8" name="priority" />
        <field name="arch" type="xml">
            <tree>
                <field name="uid" />
                <field name="name" />
                <field name="responsible_id" />
                <field name="total_hours" />
                <field name="total_credits" />
            </tree>
        </field>
    </record>

    <!-- Course Group Form View -->
    <record model="ir.ui.view" id="course_group_form">
        <field name="name">school.course_group.view</field>
        <field name="model">school.course_group</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Course Group">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="toggle_active"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-archive"
                        >
                            <field
                                name="active"
                                widget="boolean_button"
                                options='{"terminology": "archive"}'
                            />
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" placeholder="Name" />
                        </h1>
                    </div>
                    <div class="oe_fade">
                        <field name="uid" readonly="1" />
                    </div>

<!--                    <group col="2">-->
<!--                        <div class="oe_title">-->
<!--                            <h1>-->
<!--                                <field name="name"/>-->
<!--                            </h1>-->
<!--                            <div class="oe_fade">-->
<!--                                <field name="uid" readonly="1"/>-->
<!--                            </div>-->
<!--                        </div>-->
<!--                    </group>-->
                    <group>
                        <group>
                            <field name="title" />
                            <field name="responsible_id" />
                            <field name="sequence" />
                            <field name="level" />
                            <field name="quadri" />
                            <field name="mandatory" />
                            <field name="cg_grouping" create="0" />
                        </group>
                        <group>
                            <field name="total_hours" />
                            <field name="total_credits" />
                            <field name="total_weight" />
                        </group>
                    </group>
                    <field
                        name="course_ids"
                        context="{'default_course_group_id':active_id}"
                    >
                        <tree>
                            <field name="uid" />
                            <field name="name" />
                            <field name="hours" />
                            <field name="credits" />
                            <field name="weight" />
                        </tree>
                    </field>
                    <notebook>
                        <page string="Blocs">
                            <field name="bloc_ids" readonly="1">
                                <tree>
                                    <field name="uid" />
                                    <field name="name" />

                                    <field name="year_id" />
                                </tree>
                            </field>
                        </page>
                        <page string="Description">
                            <field
                                name="description"
                                placeholder="Vade mecum..."
                                colspan="4"
                            />
                        </page>
                        <page string="Notes">
                            <field name="notes" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_course_group_filter" model="ir.ui.view">
        <field name="name">course_group.select</field>
        <field name="model">school.course_group</field>
        <field name="arch" type="xml">
            <search string="Search Course Group">
                <field name="uid" filter_domain="[( 'uid', 'ilike', self)]" />
                <field name="name" filter_domain="[( 'name', 'ilike', self)]" />
            </search>
        </field>
    </record>

    <record id="action_course_group_form" model="ir.actions.act_window">
        <field name="name">Course Groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.course_group</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="view_course_group_filter" />
        <field name="help" type="html">
