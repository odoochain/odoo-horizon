    <record id="view_program_filter" model="ir.ui.view">
        <field name="name">program.select</field>
        <field name="model">school.program</field>
        <field name="arch" type="xml">
            <search string="Search Program">
                <field name="uid" filter_domain="[( 'uid', 'ilike', self)]" />
                <field name="title" filter_domain="[('title', 'ilike',self)]" />
                <filter
                    string="Current Year"
                    name="current"
                    domain="[('year_sequence','=','current')]"
                />
                <filter
                    string="Next Year"
                    name="next"
                    domain="[('year_sequence','=','next')]"
                />
                <filter
                    string="Previous Year"
                    name="previous"
                    domain="[('year_sequence','=','previous')]"
                />
                <separator />
                <filter string="Draft" name="draft" domain="[('state','=','draft')]" />
                <filter
                    string="Published"
                    name="published"
                    domain="[('state','=','published')]"
                />
                <filter
                    string="Archived"
                    name="archived"
                    domain="[('state','=','archived')]"
                />
                <group expand="1" string="Group By">
                    <filter
                        string="Cycle"
                        name="cycle_id_group"
                        context="{'group_by':'cycle_id'}"
                    />
                    <filter
                        string="Speciality"
                        name="speciality_id_group"
                        context="{'group_by':'speciality_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

