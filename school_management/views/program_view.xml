    <!-- Program Kanban View -->
    <record model="ir.ui.view" id="program_kanban_view">
        <field name="name">school.program.kanban</field>
        <field name="model">school.program</field>
        <field name="arch" type="xml">
            <kanban class="o_program_kanban" default_group_by="speciality_id">
                <field name="uid" />
                <field name="title" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_program_kanban">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="uid" />
                                        <br />
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </div>
                                </div>
