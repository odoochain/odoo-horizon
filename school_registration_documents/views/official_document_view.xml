<odoo>
    
        
        <!--<menuitem name="Official Documents" id="menu_official_document" icon="fa-book" web_icon="website_portal_sale,static/description/icon.png" sequence="65" />-->
        
        <!-- Official Document List View -->
        <record id="view_official_document_list" model="ir.ui.view">
            <field name="name">school.official_document.tree</field>
            <field name="model">school.official_document</field>
            <field eval="8" name="priority" />
            <field name="arch" type="xml">
                <tree string="Official Document" create="0" default_order="student_id">
                    <field name="student_id" />
                    <field name="type_id" />
                    <field name="is_available"/>
                    <field name="expiry_date"/>
                    <field name="attachment_count"/>
                </tree>
            </field>
        </record>
        
        <!-- Official Document Form View -->
        <record id="view_official_document_form" model="ir.ui.view">
            <field name="name">school.official_document.form</field>
            <field name="model">school.official_document</field>
            <field eval="8" name="priority" />
            <field name="arch" type="xml">
                <form string="Official Document">
                    <sheet>
                        <div class="oe_title">
                          <h2>
                           <field name="name"/>
                          </h2>
                        </div>
                         <group col="2">
                            <field name="student_id" />
                            <field name="type_id" />
                            <field name="is_available" />
                            <field name="has_expiry_date" invisible="1"/>
                            <field name="expiry_date" attrs="{'invisible': [('has_expiry_date', '=', False)], 'required': [('has_expiry_date', '=', True),('is_available', '=', True)]}"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <field name="note" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_official_document_list" model="ir.actions.act_window">
            <field name="name">Official Documents</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.official_document</field>
            
            <field name="view_mode">tree</field>
        </record>
        
        <record id="action_official_document_tree_view1" model="ir.actions.act_window.view">
            <field name="sequence" eval="1" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_official_document_list" />
            <field name="act_window_id" ref="action_official_document_list" />
        </record>
        
        <record id="action_official_document_form_view1" model="ir.actions.act_window.view">
            <field name="sequence" eval="5" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_official_document_form" />
            <field name="act_window_id" ref="action_official_document_list" />
        </record>
        
        <menuitem id="menu_official_document_form" parent="school_management.menu_individual_bloc" action="action_official_document_list" sequence="999" />
        
    
</odoo>